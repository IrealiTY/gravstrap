<div class="{{ class|default('col-lg-4') }}">
    {% set linked = url is not null %}
    {% set tag = linked ? 'a href="' ~ url ~ '"' : 'div' %}
    {% set close_tag = linked ? 'a' : 'div' %}
    <{{ tag }} class="thumbnail">
    {{ grav.page.media.images[image] }}
    {% if linked == false %}
<div class="card-block">
    <p class="card-text">
        {{ content }}
    </p>
</div>
    {% endif %}
    </{{ close_tag }}>
</div>
